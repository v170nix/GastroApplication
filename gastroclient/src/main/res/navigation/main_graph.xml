<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/mainClientFragment"
        android:name="net.arwix.gastro.client.ui.MainClientFragment"
        android:label="fragment_main_client"
        tools:layout="@layout/fragment_main_client" >
        <action
            android:id="@+id/action_mainClientFragment_to_chooseFragment"
            app:destination="@id/orderTableFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderTableFragment"
        android:name="net.arwix.gastro.client.ui.order.OrderTableFragment"
        android:label="fragment_choose"
        tools:layout="@layout/fragment_order_table" >
        <action
            android:id="@+id/action_orderTableFragment_to_orderListFragment"
            app:destination="@id/orderListFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderListFragment"
        android:name="net.arwix.gastro.client.ui.order.OrderListFragment"
        android:label="fragment_order_list"
        tools:layout="@layout/fragment_order_list" />
    <fragment
        android:id="@+id/orderListAddItemFragment"
        android:name="net.arwix.gastro.client.ui.order.OrderListAddItemFragment"
        android:label="fragment_order_list_add"
        tools:layout="@layout/fragment_order_list_add_item" /><action android:id="@+id/action_global_orderListAddItemFragment" app:destination="@id/orderListAddItemFragment"/>
    <fragment
        android:id="@+id/signInFragment"
        android:name="net.arwix.gastro.client.ui.profile.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_mainClientFragment"
            app:destination="@id/mainClientFragment" />
    </fragment>
</navigation>