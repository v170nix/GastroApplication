<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_pay_default_plus_one_button"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorItemGroup"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="0dp"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/item_pay_default_minus_one_button"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorItemGroup"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_pay_default_name_text"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:firstBaselineToTopHeight="28dp"
        app:layout_constraintEnd_toStartOf="@+id/item_pay_default_plus_one_button"
        app:layout_constraintStart_toEndOf="@+id/item_pay_default_minus_one_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_pay_default_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintEnd_toStartOf="@+id/item_pay_default_plus_one_button"
        app:layout_constraintTop_toBottomOf="@+id/item_pay_default_name_text" />

    <TextView
        android:id="@+id/item_pay_default_pay_count_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSecondary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="to pay: 1 item(s)"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="#FFFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_pay_default_minus_one_button"
        app:layout_constraintTop_toBottomOf="@+id/item_pay_default_name_text"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>