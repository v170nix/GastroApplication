<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorTextOnPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="toolbarStyle">@style/AppToolbarStyle</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorOnPrimary">@color/colorTextOnPrimary</item>>
        <item name="android:textColorPrimaryInverse">@color/colorTextOnPrimary</item>
        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialAlertDialog
        </item>
    </style>

    <style name="AppToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppCollapsingStyle" />

    <style name="AppCollapsingStyle.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.PrimarySurface">

    </style>

    <style name="AppCollapsingStyle.CollapsingToolbarLayout">
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleGravity">top</item>
        <item name="expandedTitleMarginStart">36dp</item>
        <item name="expandedTitleMarginTop">28dp</item>
        <item name="expandedTitleTextAppearance">@style/TextAppearanceExpandToolbarStyle</item>
        <item name="collapsedTitleTextAppearance">@style/TextAppearanceCollapsedToolbarStyle</item>
        <item name="layout_scrollFlags">scroll|enterAlways|exitUntilCollapsed|snap</item>
    </style>

    <style name="AppCollapsingStyle.ImageView">
        <item name="android:alpha">0.1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.35</item>
    </style>

    <style name="AppCollapsingStyle.SubTitleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.72</item>
    </style>

    <style name="AppCollapsingStyle.ActionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Overline</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_collapseParallaxMultiplier">0.4</item>
    </style>

    <style name="AppCollapsingStyle.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="layout_collapseMode">pin</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
    </style>

    <style name="TextAppearanceExpandToolbarStyle" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearanceCollapsedToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="AppMultilineButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:backgroundTint">@color/colorSecondary</item>

    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- reference our hint & error styles -->
        <!--        <item name="hintTextAppearance">@style/HintText</item>-->
        <!--        <item name="errorTextAppearance">@style/ErrorText</item>-->
        <!--        <item name="android:textColor">@color/user_input_color</item>-->
        <!--        <item name="android:textColorHint">@color/unfocused_color</item>-->
        <item name="colorControlNormal">#FFFFFFFF</item>
        <!--        <item name="colorControlActivated">@color/blue</item>-->
        <!--        <item name="colorControlHighlight">@color/green</item>-->
    </style>

</resources>
